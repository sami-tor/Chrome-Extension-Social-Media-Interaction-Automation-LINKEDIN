{
    "manifest_version": 3,
    "name": "LinkedIn Auto Liker",
    "version": "1.0",
    "description": "Automatically scrolls and likes posts on LinkedIn with a premium interface.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "LinkedIn Auto Liker"
    },
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}